rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces user-ownership for user profiles.
     * @path /users/{userId}
     * @allow (create) User 'Wrfvt9vtB3ZhPp4F7URDqsaz4sp2' can create their profile at /users/Wrfvt9vtB3ZhPp4F7URDqsaz4sp2.
     * @allow (get, update, delete) User 'Wrfvt9vtB3ZhPp4F7URDqsaz4sp2' can read/update/delete their profile at /users/Wrfvt9vtB3ZhPp4F7URDqsaz4sp2.
     * @deny (create, get, update, delete) User 'SomeOtherUserId' cannot access user profile at /users/Wrfvt9vtB3ZhPp4F7URDqsaz4sp2.
     * @principle Enforces strict ownership for user profiles, using the path to guarantee access.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to game sessions, allowing creation by authenticated users and modification/deletion only by the organizer.
     * @path /gameSessions/{gameSessionId}
     * @allow (create) User can create a game session with their ID as the organizerId.
     * @allow (get, list) Any user can read/list game sessions.
     * @allow (update, delete) Only the organizer of a game session can update/delete it.
     * @deny (update, delete) A non-organizer cannot update/delete a game session.
     * @principle Enforces organizer-based ownership for game sessions.
     */
    match /gameSessions/{gameSessionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if resource != null && request.auth.uid == resource.data.organizerId;
      allow delete: if resource != null && request.auth.uid == resource.data.organizerId;
    }

    /**
     * @description Allows public read access to courts, but restricts modifications to authenticated organizers.
     * @path /courts/{courtId}
     * @allow (get, list) Any user can read/list courts.
     * @allow (create, update, delete) Only the organizer can create/update/delete courts.
     * @deny (create, update, delete) A non-organizer cannot create/update/delete courts.
     * @principle Allows public read access with restricted write access based on organizer role.
     */
    match /courts/{courtId} {
      function isSignedIn() {
        return request.auth != null;
      }
      
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    /**
     * @description Controls access to groups, allowing members to read and modify group details.
     * @path /groups/{groupId}
     * @allow (get, list) Any user can read/list groups.
     * @allow (create, update, delete) Only members of the group can create/update/delete it.
     * @deny (create, update, delete) A non-member cannot create/update/delete a group.
     */
    match /groups/{groupId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }
  }
}