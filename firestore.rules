/**
 * @file Firestore Security Rules for LocalDink App
 * @description This ruleset enforces a strict user-ownership model for user profiles,
 *              allows public read access to courts, and secures game sessions based on organizer ID.
 *              Groups are secured by membership.
 *
 * Data Structure:
 * - /users/{userId}: User profiles, accessible only by the owning user.
 * - /gameSessions/{gameSessionId}: Game sessions, accessible for modification only by the organizer.
 * - /courts/{courtId}: Publicly readable court information.
 * - /groups/{groupId}: Groups, accessible by members.
 *
 * Key Security Decisions:
 * - User listing is disabled at the root `/users` collection.
 * - Public read access is granted to the `/courts` collection.
 * - Data validation is minimized for prototyping but includes ownership and relational integrity checks.
 *
 * Denormalization for Authorization:
 * - GameSession documents denormalize the `organizerId` to enable efficient authorization checks.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Prevents listing of all user profiles at the root `/users` collection.
     * @path /users
     * @allow (get) Allow individual user profile reads (handled by /users/{userId} rule).
     * @deny (list) Prevents listing all users.
     * @principle Prevents information disclosure by restricting user enumeration.
     */
    match /users {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages access to user profiles.
     * @path /users/{userId}
     * @allow (create) User can create their own profile if the userId matches their auth.uid.
     * @allow (get, update, delete) User can get, update, or delete their own profile if authenticated and the userId matches their auth.uid.
     * @deny If the userId does not match the authenticated user's ID.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.id == userId;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Manages access to game sessions.
     * @path /gameSessions/{gameSessionId}
     * @allow (get, list) Any authenticated user can view game sessions.
     * @allow (create) Only the organizer can create a game session, validated through the organizerId.
     * @allow (update, delete) Only the organizer can update or delete the game session.
     * @deny Non-organizers cannot create, update, or delete game sessions.
     * @principle Enforces organizer-based access control for game sessions.
     */
    match /gameSessions/{gameSessionId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.organizerId == request.auth.uid;
      allow update: if isSignedIn() && resource != null && resource.data.organizerId == request.auth.uid;
      allow delete: if isSignedIn() && resource != null && resource.data.organizerId == request.auth.uid;
    }

    /**
     * @description Manages access to courts.
     * @path /courts/{courtId}
     * @allow (get, list) All users can view courts.
     * @deny All write operations (create, update, delete) are disabled.
     * @principle Allows public read access to court information, restricts write access.
     */
    match /courts/{courtId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages access to groups.
     * @path /groups/{groupId}
     * @allow (get, list) Any authenticated user can view groups.
     * @allow (create) Any authenticated user can create a group.
     * @allow (update, delete) Only members of the group can update or delete it.
     * @principle Enforces membership-based access control for groups.
     */
    match /groups/{groupId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource.data.memberIds.hasAny([request.auth.uid]);
      allow delete: if isSignedIn() && resource.data.memberIds.hasAny([request.auth.uid]);
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isSignedIn() && isOwner(userId) && resource != null;
    }
  }
}