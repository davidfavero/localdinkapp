/**
 * @fileOverview Firestore Security Rules for the LocalDink application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles
 * and uses denormalized data for authorization of game sessions. It prioritizes
 * security and performance by avoiding `get()` calls within rules.
 *
 * Data Structure:
 * - User profiles are stored under `/users/{userId}`.
 * - Game sessions are stored under `/gameSessions/{gameSessionId}`.
 * - Courts are stored under `/courts/{courtId}`.
 * - Groups are stored under `/groups/{groupId}`.
 *
 * Key Security Decisions:
 * - Users can only access their own profile data.
 * - Game session access is controlled by the organizer.
 * - Listing the entire `users` collection is disallowed to protect user privacy.
 * - No data shape validation is performed in this prototyping phase.
 *
 * Denormalization for Authorization:
 * - GameSession documents include an `organizerId` field, denormalized from UserProfile,
 *   to allow direct authorization checks without additional reads.
 *
 * Structural Segregation:
 * - No public vs. private data segregation is implemented, assuming all data
 *   within the defined entities requires authentication.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile information.
     * @path /users/{userId}
     * @allow (get, create, update, delete) if the request is made by the user with matching userId.
     * @deny (get, create, update, delete) if the request is made by a different user.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Listing users is not permitted to protect user privacy
      allow create: if isSignedIn() && isCreatingOwnedResource(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to game session information.
     * @path /gameSessions/{gameSessionId}
     * @allow (get, list) if true (public read).
     * @allow (create) if the organizerId matches the authenticated user's ID.
     * @allow (update, delete) if the request is made by the game session organizer.
     * @deny (create, update, delete) if the request is not made by the organizer.
     * @principle Allows public reading but restricts modifications to the organizer.
     */
    match /gameSessions/{gameSessionId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.organizerId == request.auth.uid;
      allow update: if isSignedIn() && isGameSessionOrganizer(resource.data.organizerId);
      allow delete: if isSignedIn() && isGameSessionOrganizer(resource.data.organizerId);
    }

    /**
     * @description Controls access to court information.
     * @path /courts/{courtId}
     * @allow (get, list) if true (public read).
     * @allow (create, update, delete) if false; // TODO: Add admin-only access.
     * @principle Allows public reading but restricts modifications (currently disabled).
     */
    match /courts/{courtId} {
      allow get, list: if true;
      allow create, update, delete: if false;  // TODO: Add admin-only access.
    }

    /**
     * @description Controls access to group information.
     * @path /groups/{groupId}
     * @allow (get, list) if true (public read).
     * @allow (create, update, delete) if false; // TODO: Add member-based access control.
     * @principle Allows public reading but restricts modifications (currently disabled).
     */
    match /groups/{groupId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add member-based access control.
    }

    // ---- Helper functions ----

    /**
     * @description Checks if the user is signed in.
     * @return true if the user is authenticated, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     * @param {string} userId The user ID to compare against the authenticated user's ID.
     * @return true if the user IDs match, false otherwise.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner and the document exists.
     * @param {string} userId The user ID to check for ownership.
     * @return true if the user is the owner and the document exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Checks if the authenticated user is creating a resource owned by themself.
     * @param {string} userId The user ID that should own the created resource.
     * @return true if the user is creating a resource owned by themself, false otherwise.
     */
    function isCreatingOwnedResource(userId) {
      return request.auth.uid == userId && request.resource.data.id == userId;
    }

    /**
     * @description Checks if the authenticated user is the organizer of the game session.
     * @param {string} organizerId The organizer ID to compare against the authenticated user's ID.
     * @return true if the user is the organizer, false otherwise.
     */
    function isGameSessionOrganizer(organizerId) {
      return request.auth.uid == organizerId && resource != null;
    }
  }
}